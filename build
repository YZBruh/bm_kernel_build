#!/bin/sh

set -e -x

# Kernel Source
KERNEL_SOURCE=https://github.com/apisConn/android_kernel_samsung_a24.git
KERNEL_BRANCH=OSRC
KERNEL_DEFCONFIG=a24_defconfig

# Prebuilt Proton Clang Toolchain
CLANG=https://github.com/kdrag0n/proton-clang.git
CLANG_BRANCH=master

# Android Build Environment
ANDROID_SOURCE_DIR=${HOME}/android
ANDROID_BRANCH=android-12.0.0_r1

# Setup make Command
make_fun() {
  make O=out ARCH=arm64 CC=clang \
  LLVM=1 LLVM_IAS=1 \
  CROSS_COMPILE=aarch64-linux-gnu- \
  CROSS_COMPILE_ARM32=arm-linux-gnueabi- "$@"
}

# Work Path
WORK=${HOME}/work

# Kernel Folder Name
KERNEL=android-kernel

# Kernel Source Path
KERNEL_SRC=${WORK}/${KERNEL}

# Prepare Directory
mkdir -p "${WORK}"
cd "${WORK}" || exit 1

# Cloning all the Necessary files
[ ! -d clang ] && git clone --depth=1 "${CLANG}" -b "${CLANG_BRANCH}" ./clang
[ ! -d "${KERNEL}" ] && git clone --depth=1 "${KERNEL_SOURCE}" -b "${KERNEL_BRANCH}" "${KERNEL}"

# Setting Toolchain Path
PATH="${WORK}/clang/bin:$PATH"

# Enter Kernel root directory
cd "${KERNEL_SRC}" || exit 1

# Clean and configure kernel
make_fun mrproper
make_fun "${KERNEL_DEFCONFIG}"

# Check and create abi_symbollist.raw if not exists
ABI_DIR=${KERNEL_SRC}/out
ABI_FILE=${ABI_DIR}/abi_symbollist.raw
if [ ! -f "${ABI_FILE}" ]; then
  mkdir -p "${ABI_DIR}"
  touch "${ABI_FILE}"
fi

# Generate include/generated/autoksyms.h
make_fun modules_prepare

# Compile Kernel Image
make_fun -j"$(nproc --all)" Image.gz-dtb 2>&1 | tee build.log || exit 1

# Integrate with Android build system
# Clone Android source code if not already present
if [ ! -d "${ANDROID_SOURCE_DIR}" ]; then
  mkdir -p "${ANDROID_SOURCE_DIR}"
  cd "${ANDROID_SOURCE_DIR}" || exit 1
  repo init -u https://android.googlesource.com/platform/manifest -b "${ANDROID_BRANCH}"
  repo sync -j"$(nproc --all)"
fi

# Set up the Android build environment
cd "${ANDROID_SOURCE_DIR}" || exit 1
source build/envsetup.sh
lunch aosp_arm64-eng

# Copy the compiled kernel image to the Android build directory
mkdir -p "${ANDROID_SOURCE_DIR}/device/samsung/a24/kernel"
cp "${KERNEL_SRC}/out/arch/arm64/boot/Image.gz-dtb" "${ANDROID_SOURCE_DIR}/device/samsung/a24/kernel"

# Build the Android boot image
make -j"$(nproc --all)" bootimage 2>&1 | tee bootimage.log || exit 1
